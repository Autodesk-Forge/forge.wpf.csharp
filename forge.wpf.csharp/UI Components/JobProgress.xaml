<Window x:Class="Autodesk.Forge.WpfCsharp.JobProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:Autodesk.Forge.WpfCsharp"
        mc:Ignorable="d"
        Title="Translation Progress"
		Height="165" Width="470"
		Style="{DynamicResource MayaStyle}"
		Icon="../Images/Adsk.ico"
		Loaded="Window_Loaded"
>

	<Grid>
		<Label x:Name="label" Content="Label" HorizontalAlignment="Stretch" Margin="10,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="-1.346,-0.308" Width="Auto" Height="19" />
		<ProgressBar x:Name="progressBar" Height="19" Margin="10,34,10,0" VerticalAlignment="Top" />
		<Label x:Name="progressMsg" Content="Label" HorizontalAlignment="Stretch" Margin="10,58,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" RenderTransformOrigin="0.846,-1.077" Width="Auto" Height="19" />
		<Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" RenderTransformOrigin="-0.693,0.52" Width="75" Click="Button_Click" />
	</Grid>
	
</Window>
